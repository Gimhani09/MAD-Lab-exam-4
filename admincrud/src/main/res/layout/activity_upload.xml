<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pic2"

    tools:context=".UploadActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_marginTop="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Patient Details"
            android:textSize="24sp"
            android:paddingBottom="20sp"
            android:textColor="@color/green"
            android:textStyle="normal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="0dp"

            />

        <EditText
            android:id="@+id/uploadId"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/green_border"
            android:gravity="start|center_vertical"
            android:hint="Enter patient ID"
            android:padding="16dp"
            android:textColor="@color/black"
            />

        <EditText
            android:id="@+id/uploadName"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/green_border"
            android:gravity="start|center_vertical"
            android:hint="Enter patient name"
            android:padding="16dp"
            android:textColor="@color/black"
           />

        <EditText
            android:id="@+id/uploadAge"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/green_border"
            android:layout_marginTop="20dp"
            android:padding="16dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:hint="Age"

            android:gravity="start|center_vertical"
            android:textColor="@color/black"
         />

        <EditText
            android:id="@+id/uploadGender"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/green_border"
            android:layout_marginTop="20dp"
            android:padding="16dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:hint="Gender"

            android:gravity="start|center_vertical"
            android:textColor="@color/black"
            />

        <EditText
            android:id="@+id/uploadPhone"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/green_border"
            android:layout_marginTop="20dp"
            android:padding="16dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:hint="Emergency contacts"

            android:gravity="start|center_vertical"
            android:textColor="@color/black"
           />

        <EditText
            android:id="@+id/uploadDiagnosis"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/green_border"
            android:layout_marginTop="20dp"
            android:padding="16dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:hint="Patient's diagnosis"

            android:gravity="start|center_vertical"
            android:textColor="@color/black"
           />

        <EditText
            android:id="@+id/uploadHistory"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/green_border"
            android:layout_marginTop="20dp"
            android:padding="16dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:hint="Patient's history"

            android:gravity="start|center_vertical"
            android:textColor="@color/black"
           />

        <Button
            android:id="@+id/saveButton"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:text="Save"
            android:textSize="18sp"
            android:layout_marginTop="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/green"
            app:cornerRadius="30dp"/>

    </LinearLayout>
</ScrollView>
