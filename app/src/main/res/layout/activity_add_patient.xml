<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="6dp"
    android:background="@drawable/pic2"
    tools:context=".AddPatientActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/addPatientHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="56dp"
                android:layout_marginStart="75dp"
                android:fontFamily="@font/poppins"
                android:text="Enter Patient Details"
                android:textColor="@color/green"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/saveButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@id/addPatientHeading"
                android:layout_marginEnd="16dp"
                android:src="@drawable/baseline_done_24"
                android:layout_marginTop="-10dp"/>

            <EditText
                android:id="@+id/nameEditText"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_below="@id/addPatientHeading"
                android:layout_marginTop="116dp"
                android:background="@drawable/blue_border"
                android:fontFamily="@font/poppins"
                android:hint="Patient Name"
                android:padding="12dp"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/ageEditText"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_below="@id/nameEditText"
                android:layout_marginTop="16dp"
                android:background="@drawable/blue_border"
                android:fontFamily="@font/poppins"
                android:hint="Patient Age"
                android:inputType="number"
                android:padding="12dp"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/genderEditText"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_below="@id/ageEditText"
                android:layout_marginTop="16dp"
                android:background="@drawable/blue_border"
                android:fontFamily="@font/poppins"
                android:hint="Patient Gender"
                android:padding="12dp"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/contactEditText"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_below="@id/genderEditText"
                android:layout_marginTop="16dp"
                android:background="@drawable/blue_border"
                android:fontFamily="@font/poppins"
                android:hint="Emergency Contact"
                android:inputType="phone"
                android:padding="12dp"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/historyEditText"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_below="@id/contactEditText"
                android:layout_marginTop="16dp"
                android:background="@drawable/blue_border"
                android:fontFamily="@font/poppins"
                android:hint="Enter Patient Medical History"
                android:padding="12dp"
                android:textSize="18sp" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
